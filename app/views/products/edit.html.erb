<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  
  Name: <input type="text" name="name" value="<%= @product.name %>"><br>
  Price: <input type="number" step="0.01" name="price" value="<%= @product.price %>"><br>
  Description: <input type="text" name="description" value="<%= @product.description %>"><br>
  <br><input type="submit" value="Update Product"> <a href="/products/<%= @product.id %>">Cancel</a><br><br>
</form>

<a href="/products/<%= @product.id %>" data-method="delete">Remove Product</a>