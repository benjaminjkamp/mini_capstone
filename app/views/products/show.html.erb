<h1><%= @product.name %></h1>

<h3>Price: <%= @product.price %></h3>
<h3>Description: <%= @product.description %></h3>
<%@product.images.each do |image|%>
  <img height="25%" width="25%" src=<%="#{image.url}"%>>
<% end %>
<h3><a href="/images/new?product_id=<%=@product.id%>">Add Image</a></h3>

<h2><a href="/products/<%= @product.id %>/edit">Edit Product</a></h2>
<h2><a href="http://localhost:3000/products">Back to All Products</a></h2>